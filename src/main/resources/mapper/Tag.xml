    <!--    tagDto-->
    <resultMap id="BaseDtoMap" type="com.wbxnl.blog.model.dto.TagDto">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="hidden" property="hidden"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="count" property="count"/>
    </resultMap>
    <!--    管理员分页查询标签详细数据-->
    <select id="getDetailPage" resultMap="BaseDtoMap">
        select
        t.id,
        t.name,
        t.hidden,
        t.create_time,
        t.update_time,
        count(a.id) as count
        from
        t_tag t left join
        t_article_tag at on t.id=at.tag_id
        left join t_article a on a.id=at.article_id and a.deleted=0
        <where>
            t.deleted=0
            and
            (at.id is null or at.tag_id=t.id)
            <if test="tag.id != null">
                AND c.id = #{tag.id}
            </if>
            <if test="tag.name != null and tag.name != ''">
                AND name like concat('%',#{tag},'%')
            </if>
            <if test="tag.hidden != null">
                AND c.hidden=#{tag}
            </if>
        </where>
        group by t.id
        order by t.create_time desc,t.id
        limit #{current},#{limit};
    </select>

    <!--    用户查询-->
    <!--    用户查询所有的标签-->
    <!--    TODO count数量不对，可能有其它隐藏的便签已被计入-->
    <select id="getAllDetailByUser" resultMap="BaseDtoMap">
        select t.id,
               t.name,
               t.hidden,
               t.create_time,
               t.update_time,
               count(a.id) as count
        from
            t_tag t
            left join t_article_tag at
        on at.tag_id=t.id
            left join t_article a on a.id= at.article_id and a.deleted=0 and a.status=1
        where
            t.deleted=0
          and
            t.hidden=0
        group by t.id
        order by t.create_time desc, t.id
    </select>
</mapper>
